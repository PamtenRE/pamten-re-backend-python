{
  "scriptFile": "__init__.py",
  "bindings": [
    {
      "authLevel": "anonymous",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": [ "get", "post", "put", "delete" ],
      "route": "{*route}"  // This is CRITICAL: it handles ALL incoming routes
    },
    {
      "type": "http",
      "direction": "out",
      "name": "$return"
    }
  ]
}